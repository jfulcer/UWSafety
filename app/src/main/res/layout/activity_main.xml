<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uwsafety.uwsafety.MainActivity">

    <Button
        android:text="Campus Security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/campusSecurity"
        android:layout_marginTop="136dp"
        android:elevation="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false"
        android:textStyle="normal|bold"
        android:minHeight="85dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:id="@+id/infoBtn"
        android:layout_alignTop="@+id/mapView"
        android:layout_toRightOf="@+id/mapView"
        android:layout_toEndOf="@+id/mapView"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        tools:onClick="onClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_help"
        android:id="@+id/faqBtn"
        android:layout_alignTop="@+id/infoBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/Call911"
        android:elevation="15dp"
        android:layout_below="@+id/campusSecurity"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_mapmode"
        android:id="@+id/mapView"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        tools:onClick="buttonClick"
        android:layout_alignTop="@+id/homeButton"
        android:layout_toRightOf="@+id/homeButton"
        android:layout_toEndOf="@+id/homeButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_call"
        android:layout_marginBottom="16dp"
        android:id="@+id/homeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
